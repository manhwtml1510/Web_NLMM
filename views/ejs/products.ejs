<style>
    table, th, td {
        border:1px solid black;
    }
</style>

<h2>Danh sách sản phẩm</h2>

<table style="width:100%">
    <tr>
        <th>ID</th>
        <th>Tên</th>
        <th>Thương hiệu</th>
        <th>Giá</th>
        <th>Mô tả</th>
        <th>Dung tích(ml)</th>
        <th>Xuất sứ</th>
        <th>Giới tính</th>
        <th>Tồn kho</th>
        <th>Hành dộng</th>
    </tr>
    <% listProducts.forEach((product) => { %>
        <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.brand %></td>
            <td><%= product.price %></td>
            <td><%= product.style %></td>
            <td><%= product.capacity %></td>
            <td><%= product.origin %></td>
            <td><%= product.gender %></td>
            <td><%= product.quantity %></td>
            <td>
                <a href="/manage/products/edit/<%= product.id %>" >sửa</a>
                <a>xóa</a>
            </td>
        </tr>
    <% }); %>

</table>

<button>Thêm mới</button>